<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1 class="center mt-3 mb-3">Recent Posts</h1>
  </div>
  <div class="col-md-2">
    <% if current_user.try(:admin?) %>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-lg btn-light' %>
    <% end -%>
  </div>
</div>
<% @posts.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>
<br>
