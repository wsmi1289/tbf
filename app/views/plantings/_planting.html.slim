.planting-hover.mx-0 data-planting="#{planting.id}" data-toggle="tooltip" data-placement="top" data-html="true" title=render('misc/planting_tooltip', planting: planting)
	- planting.num_beds.to_i.times do |b|
		.bed class="#{planting.crop.name.downcase}"
	- if bed_fraction(planting) != 0
		.bed class="#{planting.crop.name.downcase}" style="width: #{bed_fraction(planting)}px"
javascript:
	$(function () {
		$('.planting-hover').tooltip()
	});