= form_for(@product) do |f|
  - if @product.errors.any?
    #error_explanation
      h2 = pluralize(@product.errors.count, "error")
        | prohibited this product from being saved:
      ul
        - @product.errors.full_messages.each do |message|
          li = message
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control form-control-lg'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control form-control-lg'
  .form-group
    = f.label :image, "Add an image"
    = f.file_field :image, class: 'form-control-file form-control-lg'
  .row
    .form-group.col
      = f.label :price
      = f.text_field :price, class: 'form-control-file form-control-lg'
    .form-group.col
      = f.label :category_id
      = f.collection_select :category_id, Category.all, :id, :name, {prompt: true}, {class: 'form-control form-control-lg'}
  .actions
    = f.submit class: 'btn btn-light btn-lg btn-block'
